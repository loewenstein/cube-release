---
name: cube_sync

templates:
  bmp.yml.erb: config.bpm.yml
  kube_config.erb: config/kube.yml
  kube_ca_pem.erb: config/ca.pem
  kube_client_certificate.erb: config/kube_client_certificate.crt
  kube_client_key.erb: config/kube_client_key.key

packages:
  - cube

properties:
  cube_sync.ccAPI:
    description: "The API endpoint of the Cloud Controller"
  cube_sync.ccUser:
    default: internal_user
    description: "The internal username for the Cloud Controller"
  cube_sync.ccPassword:
    description: "The internal password for the Cloud Controller"
  cube_sync.backend:
    default: k8s
    description: The backend to use
  cube_sync.kube.user.client_key:
    description: The client key to authenticate against the Kubernetes cluster
  cube_sync.kube.user.client_certificate:
    description: The client certificate to authenticate against the Kubernetes cluster
  cube_sync.kube.cluster.server:
    description: The api endpoint of the Kubernetes cluster
  cube_sync.kube.cluster.certificate_authority:
    description: The certificate authority of the Kubernetes cluster
